div

  ul.source-list

    mixin source_item(icon_id, href, text)
      - var img_src = './resources/icons/' + icon_id + '.svg';
      a(href=href,title=text)
        img.svg-icon(src=img_src)
        span!= text

    li: +source_item('listen', 'http://soundcloud.com/shamansir/tracks', 'Listen all the tracks at SoundCloud')

  dl.marker-list

    mixin album_item(alb_img, alb_name, alb_id, alb_year, songs)
      - var alb_href = 'http://soundcloud.com/shamansir/sets/' + alb_id;
      - var alb_info = alb_name + ' (' + alb_year + ')';
      - var alb_img = './resources/covers/' + alb_img + '.cover.jpg';
      - var alb_side = '100px';
      dt
        a(href=alb_href,title=alb_info)
          img(src=alb_img,title=alb_info,class='album-cover')
          span!= alb_info
      dd: ul
        - each song in songs
          li= song

    +album_item('Back', 'Back EP', 'back', 2013,
                [  'Apollo', 'Monad (Edit\'n\'Cut)', 'Bebop',
                   'Floyd Experiment', 'Blood (BF Contest)' ])
    +album_item('Back (B-Sides)', 'Back EP (B-sides)', 'back-b-sides', 2013,
                [  'Monad. Tryptich', 'Floyd Experiment (Edit)',
                   'Intrincado', 'Winter \'mphony', 'Winter \'mphony II',
                   'Bleed (Long)' ])
