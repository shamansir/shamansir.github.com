ul.segment-inner.icon-list

  mixin contact_item(icon_id, href, text)
    - var prefix  = '<span class=\'accent\'>';
    - var postfix = '</span>';
    - var link_html = text.replace('[', prefix).replace(']', postfix);
    - var img_class = 'icon-s ' + icon_id + '-icon';
    a(href=href,title=text)
      span(class=img_class)
      span!= link_html

